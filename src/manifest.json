{
  "manifest_version": 2,

  "name": "Auto Dayton MLS",
  "description": "This extension automates a Dayton, OH MLS search.",
  "version": "1.0",

  "permissions": [
    "tabs", "notifications", "storage", "bookmarks"
  ],

  "background": {
    "persistent": true,
    "scripts": ["/app/lib/string.js", "/app/js/app.js"]
    },

  "browser_action": {
    "default_icon": "/dabr.png",
    "default_title": "Auto DAY-MLS",
    "default_popup": "/app/templates/search.html"
  },

  "content_scripts": [{
    "matches": ["http://dayton.rapmls.com/*"],
    "js": ["/app/lib/jquery-2.1.0.min.js", "/app/js/rapmls.com.js"]
  }]
}